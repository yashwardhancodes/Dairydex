<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Document</title>
    <link href="header.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="main-up-header">
        <header>
        <div class="header-icons phone">
            <!-- Phone Icon and Number -->
            <div>
                <i class="fas fa-phone"></i>&nbsp;&nbsp;&nbsp;
                <span>940-440-1030</span>
            </div>
            <!-- Message Icon and Link -->
            <div class="message">
                <i class="fas fa-envelope"></i>
                <a href="mailto:info@example.com">Contact Us</a>
              </div>
        </div>
        <!-- Social Media Icons -->
        <div class="header-icons social">
            <a href="https://www.instagram.com"><i class="fab fa-instagram"></i></a>
            <a href="https://www.facebook.com"><i class="fab fa-facebook"></i></a>
            <a href="https://twitter.com"><i class="fab fa-twitter"></i></a>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary" id="nav2">
      <div class="container-fluid navbar-container">
        <a class="navbar-brand" href="http://localhost:8080/"><img src="/public/logo.png" class="logo"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'home' ? 'active' : '' %>" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'aboutus' ? 'active' : '' %>" href="/aboutus">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= currentPage === 'business' ? 'active' : '' %>" href="/business">Our Business</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle <%= currentPage === 'products' ? 'active' : '' %>" href="/products" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Our Products
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/products">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
              </ul>
            </li>
          </ul>
        </div>
        
      </div>
    </nav>
    </div>

    <script>
        // Get the current page name from Express
        const currentPage = '<%= currentPage %>';
        const navLinks = document.querySelectorAll('#nav2 .nav-link');
        navLinks.forEach(link => {
          if (link.href.includes(currentPage)) {
            link.classList.add('active');
          }
        });
      </script>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>